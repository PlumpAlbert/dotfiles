#!/bin/sh

awk 'BEGIN {
	FS=""
	a["f"]="1111"
	a["e"]="1110"
	a["d"]="1101"
	a["c"]="1100"
	a["b"]="1011"
	a["a"]="1010"
	a["9"]="1001"
	a["8"]="1000"
	a["7"]="0111"
	a["6"]="0110"
	a["5"]="0101"
	a["4"]="0100"
	a["3"]="0011"
	a["2"]="0010"
	a["1"]="0001"
	a["0"]="0000"
	}
	{
	for (i=1;i<=NF;i++) printf a[tolower($i)]" "
	print ""
	}'
