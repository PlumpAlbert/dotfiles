[colors]
darkblue = #003399
blue = #128BE7
lightblue = #83A6F4

yellow = #FFCC00
orange = #FF9933
red = #DE5C2F
green = #13920D

white = #e6ead8
black = #1a1a1a
grey = #808080

[bar/winxp]
width = 100%
height = 20
bottom = true
radius = 0
fixed-center = true
override-redirect = false

background = ${colors.darkblue}
foreground = ${colors.white}

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = Cascadia Code PL:pixelsize=8;1
font-1 = Noto Color Emoji:scale=12:antialias=true;0
font-2 = Symbols Nerd Font:pixelsize=8:antialias=false;0
font-3 = monospace:pixelsize=8;1

modules-left = bspwm dwm xwindow
modules-center = cpu memory rescuetime
modules-right = xbacklight pulseaudio battery download upload xkeyboard date

tray-position = right
tray-padding = 4
tray-background = ${colors.blue}

wm-restack = dwm

cursor-click = pointer
cursor-scroll = ew-resize

[module/rescuetime]
type = custom/script
exec = "$HOME/.config/polybar/scripts/rt.sh"
interval = 1800
click-left = "$HOME/.config/polybar/scripts/rt.sh"

[module/dwm]
type = internal/dwm
format =  <label-layout> <label-tags> <label-floating>
enable-tags-click = true
label-layout-padding = 1
; Focused
label-focused = %name%
label-focused-background = ${colors.lightblue}
label-focused-foreground = ${colors.black}
label-focused-padding = 2
; Visible
label-visible = %name%
label-visible-padding = 2
; Urgent
label-urgent = %name%!
label-urgent-background = ${colors.red}
label-urgent-padding = 2
; Empty
label-empty =

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
enable-tags-click = true
enable-tags-scroll = true
label-layout-padding = 2
; Focused
label-focused = %index%
label-focused-background = ${colors.lightblue}
label-focused-foreground = ${colors.black}
label-focused-padding = 2
; Visible
label-occupied = %index%
label-occupied-padding = 2
; Urgent
label-urgent = %index%!
label-urgent-background = ${colors.red}
label-urgent-padding = 2
; Empty
label-empty =

[module/xwindow]
type = internal/xwindow
label-foreground = ${colors.white}
label = %title:0:27:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
